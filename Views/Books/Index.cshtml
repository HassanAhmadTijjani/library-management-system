@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div
    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center p-3 mt-4 mb-4">
    <div>
        <h1 class="mb-3 mb-md-0">Books</h1>
    </div>
    <div>
        <a asp-action="Upsert" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Book
        </a>
    </div>
</div>

@* SearchBar *@
<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control"
                    placeholder="Search by title or author..." />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </div>
    </div>
</form>
@if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
{
    <div class="mb-3">
        <span class="text-muted">
            Search result for: <strong>@ViewData["CurrentFilter"]</strong>
        </span>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">
            Clear Search
        </a>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th class="d-none d-md-table-cell">Author</th>
                <th class="d-none d-md-table-cell">ISBN</th>
                <th class="d-none d-md-table-cell">Published Year</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {

                @foreach (var item in Model)
                {
                    <tr class="">
                        <td>
                            @if (item.ImageUrl == null || string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center  "
                                    style="width: 80px; height: 120px;">
                                    <i class="bi bi-image" style="font-size: 2rem; color: #ccc;"></i>
                                </div>
                            }
                            else
                            {
                                <img src="~/@item.ImageUrl" alt="Book Cover" class="img-thumbnail"
                                    style="width: 100px; height: 160px; object-fit: cover;" />
                            }
                        </td>
                        <td>@item.Title</td>
                        <td class="d-none d-md-table-cell">@item.Author</td>
                        <td class="d-none d-md-table-cell">@item.ISBN</td>
                        <td class="d-none d-md-table-cell">@item.PublishedYear</td>
                        <td>
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Borrowed</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex flex-column flex-md-row gap-2">
                            @if(User.IsInRole("Admin")){
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-sm btn-warning kard">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            }
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info kard">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                @if(User.IsInRole("Admin")){
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger kard">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">No books found. Create your first book!</p>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>