@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-8">

        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Delete">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Author</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">ISBN</dt>
                        <dd class="col-sm-9">@Model.ISBN</dd>

                        <dt class="col-sm-3">Published Year</dt>
                        <dd class="col-sm-9">@Model.PublishedYear</dd>

                        <dt class="col-sm-3">Available</dt>
                        <dd class="col-sm-9">@(Model.IsAvailable ? "Yes" : "No")</dd>
                    </dl>


                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="col-md-4 mb-3">
                <div class="mb-2">
                    <img src="~/@Model.ImageUrl" alt="Book Cover" class="img-fluid rounded"
                        style="max-height: 300px;" />
                </div>
            </div>
        </div>
    </div>
</div>