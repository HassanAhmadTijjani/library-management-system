@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h2><i class="bi bi-shield-x"></i> Access Denied</h2>
            </div>
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                <h3 class="mt-3">You don't have permission to access this page</h3>
                <p class="text-muted">
                    This page requires special permissions that your account doesn't have.
                    Please contact an administrator if you believe this is a mistake.
                </p>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house"></i> Go to Home
                </a>
            </div>
        </div>
    </div>
</div>