@model IEnumerable<LibraryManagement.Models.Member>

@{
    ViewData["Title"] = "Members";
}
<div class="d-flex justify-content-between p-6 mt-5">
    <div class="p-2">
        <h1>Members</h1>
    </div class="p-2">
    <div>
        <p>
            <a asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Add New Member</a>
        </p>

    </div>

</div>

@* SearchBar *@
<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control"
                    placeholder="Search Name..." />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </div>
    </div> 
</form>
@if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
{
    <div class="mb-3">
        <span class="text-muted">
            Search result for: <strong>@ViewData["CurrentFilter"]</strong>
        </span>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">
            Clear Search
        </a>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped">

        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>MemberShipDate</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.MemberShipDate</td>
                        <td>

                            <div class="d-flex flex-column flex-md-row gap-2">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i
                                        class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"> <i
                                        class="bi bi-info-circle"></i> Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"> <i
                                        class="bi bi-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">No members found.  your first member!</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>