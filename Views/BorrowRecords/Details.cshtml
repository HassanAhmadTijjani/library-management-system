@model LibraryManagement.Models.BorrowRecord

@{
    ViewData["Title"] = "Borrow Record Details";
}

<h1 class="px-5 py-2">Borrow Record Details</h1>

<div>
    <hr />
    <dl class="row px-3">
        <dt class="col-6 col-sm-3">Book</dt>
        <dd class=" col-6 col-sm-9">@Model.Book?.Title</dd>

        <dt class="col-6 col-sm-3">Member</dt>
        <dd class="col-6 col-sm-9">@Model.Member?.Name</dd>

        <dt class="col-6 col-sm-3">Member Email</dt>
        <dd class="col-6 col-sm-9">@Model.Member?.Email</dd>

        <dt class="col-6 col-sm-3">Borrow Date</dt>
        <dd class="col-6 col-sm-9">@Model.BorrowDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-6 col-sm-3">Return Date</dt>
        <dd class="col-6 col-sm-9">
            @if (Model.ReturnDate == null)
            {
                <span class="badge bg-warning">Not Returned Yet</span>
            }
            else
            {
                @Model.ReturnDate?.ToString("yyyy-MM-dd")
            }
        </dd>

        <dt class="col-6 col-sm-3">Status</dt>
        <dd class="col-6 col-sm-9">
            @if (Model.ReturnDate == null)
            {
                <span class="badge bg-warning">Currently Borrowed</span>
            }
            else
            {
                <span class="badge bg-success">Returned</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>