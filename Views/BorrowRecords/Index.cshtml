@model IEnumerable<LibraryManagement.Models.BorrowRecord>

@{
    ViewData["Title"] = "Borrow Records";
}
<div
    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center p-3 mt-4 mb-4">
    <div>
        <h1 class="mb-3 mb-md-0">Borrows</h1>
    </div>
    <div>
        <a asp-action="Upsert" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Borrow New Book
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Member Name</th>
                <th>Borrow Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if(Model.Any()){

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book?.Title</td>
                    <td>@item.Member?.Name</td>
                    <td>@item.BorrowDate.ToString("yyyy-MM-dd")</td>
                    <td>@(item.ReturnDate?.ToString("yyyy-MM-dd") ?? "Not Returned")</td>
                    <td>
                        @if (item.ReturnDate == null)
                        {
                            <span class="badge bg-warning">Borrowed</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Returned</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex flex-column flex-md-row gap-2">
                            <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-sm btn-warning"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"> <i class="bi bi-info-circle"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"> <i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }else{
            <tr>
            <td colspan="6" class="text-center py-5 text-muted">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3">No Records Found. Create Your First Record!</p>
            </td>

            </tr>
        }
        </tbody>
    </table>
</div>